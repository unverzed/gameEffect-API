// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int    @id @default(autoincrement())
  icon     String
  username String @unique
  email    String @unique
  password String

  avaliations avaliations[]
  games       games[]
  gamelist    gamelist[]
}

model games {
  id          Int    @id @default(autoincrement())
  user_id     Int
  name        String
  genre       String
  releaseDate String
  description String
  pictureUrl  String
  user        users  @relation(fields: [user_id], references: [id])

  avaliations avaliations[]
  gamelist    gamelist[]
}

model avaliations {
  id         Int     @id @default(autoincrement())
  user_id    Int
  game_id    Int
  review     String?
  rate       Decimal
  isFavorite Boolean?  
  isPlayed   Boolean
  gamelist   Boolean?
  user       users   @relation(fields: [user_id], references: [id])
  games      games   @relation(fields: [game_id], references: [id])
}

model gamelist {
  id      Int @id @default(autoincrement())
  user_id Int
  game_id Int

  user  users @relation(fields: [user_id], references: [id])
  games games @relation(fields: [game_id], references: [id])
}
